<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_lay_image_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:backgroundTint="@color/teal_200"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/city_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weekly_layouy"/>


    <TextView
        android:id="@+id/city_name_tv"
        android:layout_width="88dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans_bold"
        android:hint="Dallas, TX"
        android:textAlignment="center"
        android:textColor="@color/white_proposal"
        android:textSize="18dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white_proposal"></TextView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="182dp"
        android:layout_height="22dp"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans_regular"
        android:hint="Mon 4/21/18   11:58 PM"
        android:textAlignment="center"
        android:textColorHint="@color/white_proposal"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city_name_tv"
        app:tint="@color/white_proposal"></TextView>

    <TextView
        android:id="@+id/tv_current_temp"
        android:layout_width="81dp"
        android:layout_height="68dp"
        android:layout_margin="21dp"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans_regular"
        android:hint="75°"
        android:textAlignment="center"
        android:textColorHint="@color/white_proposal"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:tint="@color/white_proposal"></TextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/weekly_layouy"
        android:layout_width="match_parent"
        android:layout_marginTop="101dp"
        android:layout_height="85dp"
        android:weightSum="7"
