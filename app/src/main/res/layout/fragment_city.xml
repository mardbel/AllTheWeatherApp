        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="34dp"
            android:layout_height="85dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16.5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day_0_tv"
                android:layout_width="34dp"
                android:layout_height="22dp"
                android:hint="Mon"
                android:textAlignment="center"
                android:textColorHint="@color/white_proposal"
                android:textSize="16dp"></TextView>

            <ImageView
                android:id="@+id/weather_type_ic_0"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_icon_weather_active_ic_sunny_active"></ImageView>

            <TextView
                android:id="@+id/temp_day_0_tv"
                android:layout_width="34dp"
                android:layout_height="22dp"
                android:hint="72°"
                android:textAlignment="center"
                android:textColor="@color/white_proposal"
                android:textSize="12dp"></TextView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="34dp"
            android:layout_height="85dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16.5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/day_1_tv"
                android:layout_width="34dp"
                android:layout_height="22dp"
                android:hint="Mon"
                android:textAlignment="center"
                android:textColorHint="@color/white_proposal"
                android:textSize="16dp"></TextView>

            <ImageView
                android:id="@+id/weather_type_ic_1"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
